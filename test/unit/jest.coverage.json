{
  "rootDir": "../../",
  "resetMocks": true,
  "restoreMocks": true,
  "transform": {
    "^.+\\.(ts)$": ["ts-jest", {
      "tsconfig": "<rootDir>/test/tsconfig.test.json"
    }]
  },
  "testMatch": [
    "<rootDir>/src/**/*.test.(ts|js)"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "json", "lcov", "clover"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts", 
    "!<rootDir>/src/*/*.test.ts"
  ]
}
